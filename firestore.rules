rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default-deny all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow any authenticated user to read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow admin to read/write any user document
    match /users/{userId} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Allow any authenticated user to read and write to other collections
    match /projects/{projectId} {
      allow read, write: if request.auth != null;
    }
    
    match /tasks/{taskId} {
      allow read, write: if request.auth != null;

      // Rules for subcollections must be nested within the parent document match
      match /attachments/{attachmentId} {
        allow read, write: if request.auth != null;
      }
      
      match /timeline/{eventId} {
        allow read, write: if request.auth != null;
      }
    }
    
    match /issues/{issueId} {
      allow read, write: if request.auth != null;
    }
  }
}
