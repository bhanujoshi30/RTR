
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // For now, allow any authenticated user to read and write to the database.
    // This is a simple rule to get the application working. We can add more
    // granular security later.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
