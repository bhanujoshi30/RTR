rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read and write access to all files for any authenticated user.
    // This is a simple starting point. For production, you would likely want
    // to add more specific rules, e.g., checking file size, type, or
    // ensuring users can only write to their own folders.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
