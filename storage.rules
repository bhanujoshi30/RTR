
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files.
    // This is useful for user profile pictures and other public assets.
    // Restrict write access to only authenticated users.
    match /{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }

    // Attachments can only be created by authenticated users.
    // Reading attachments is handled by generating a download URL in the app,
    // which bypasses this rule, so we don't need a specific read rule here.
    // Only the owner of the attachment or an admin should be able to delete it (handled by app logic).
    match /attachments/{taskId}/{attachmentName} {
      allow write: if request.auth != null;
    }
  }
}
